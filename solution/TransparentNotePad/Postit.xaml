<Window x:Class="TransparentNotePad.Postit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TransparentNotePad"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:fa="http://schemas.fontawesome.io/icons/" xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
        mc:Ignorable="d"
        AllowsTransparency="True"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        Background="#00000000" 
        Title="Postit" Height="450" Width="343">
    <Window.Resources>
        <CollectionViewSource 
            Source="{Binding Source={x:Static Fonts.SystemFontFamilies}}" 
            x:Key="familyCollection">
            <CollectionViewSource.SortDescriptions>
                <scm:SortDescription PropertyName="Source" Direction="Ascending" />
            </CollectionViewSource.SortDescriptions>
        </CollectionViewSource>
        <Style x:Key="Header_Button" TargetType="Button">
            <Setter Property="OverridesDefaultStyle" Value="false"/>
            <Setter Property="Margin" Value="6,6,6,6"/>
            <Setter Property="Foreground" Value="#FF484848"/>
            <Setter Property="Background" Value="#FF9E9E9E"/>
            <Setter Property="BorderBrush" Value="#FF484848"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Name="border" BorderThickness="0" CornerRadius="2" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFaaaaaa"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="Header_Button_Icon" TargetType="fa:ImageAwesome">
            <Setter Property="Tag" Value="header_button_icon"/>
            <Setter Property="Foreground" Value="#FF2D2D2D"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="IsHitTestVisible" Value="False"/>
        </Style>
        <Style x:Key="Options_lbl" TargetType="Label">
            <Setter Property="FontFamily" Value="Poppins"/>
            <Setter Property="Foreground" Value="#FF272727"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
    </Window.Resources>
    <Border x:Name="border_main"
        CornerRadius="0,0,20,20"
        Background="#FFE6E6E6"
        MouseLeftButtonDown="DragWindow">
        <Grid x:Name="baseGrid" 
              Background="#0000">
            <Grid.RowDefinitions>
                <RowDefinition Height="37*"/>
                <RowDefinition Height="413*"/>
            </Grid.RowDefinitions>
            <Border x:Name="Header_Border" 
                    Background="#FFC5C5C5">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" Opacity="0.2" Direction="-89.8" Color="Black"/>
                </Border.Effect>
                <Grid>
                    <Grid x:Name="Options" Opacity="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="38*">
                            </RowDefinition>
                            <RowDefinition Height="143*"/>
                        </Grid.RowDefinitions>
                        
                        <Grid x:Name="Options_Header"
                              Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Button x:Name="Options_Btn_Back"
                                    Style="{StaticResource Header_Button}"
                                    Content="Close"
                                    FontFamily="Poppins"
                                    FontSize="14"
                                    Margin="10,6,35,6" Click="Options_Btn_Back_Click"/>
                            <Label x:Name="lbl_Options_Title"
                                   Content="Options"
                                   FontFamily="Poppins"
                                   FontSize="25"
                                   Foreground="#FF252525" 
                                   HorizontalContentAlignment="Center" 
                                   VerticalContentAlignment="Center"
                                   FontWeight="Bold" Grid.ColumnSpan="3" Margin="114,-6,114,0"/>
                        </Grid>
                        <Grid x:Name="Options_Main"
                              Grid.Row="1"
                              Margin="10,0,10,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <Button x:Name="Options_Btn_Top"
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Style="{StaticResource Header_Button}"
                                    Content="Top: ✓"
                                    FontFamily="Poppins"
                                    FontSize="14"
                                    Margin="30,4,30,4" Click="Options_Btn_Top_Click"/>
                            <Button 
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Style="{StaticResource Header_Button}"
                                    Content="Button"
                                    FontFamily="Poppins"
                                    FontSize="14"
                                    Margin="30,4,30,4"/>

                            <Label x:Name="Options_lbl_winOpacity"
                                   Grid.Row="1"
                                   Grid.Column="0"
                                   Content="Opacity :"
                                   Style="{StaticResource Options_lbl}"/>
                            <Slider x:Name="Options_slider_winOpacity"
                                    Grid.Row="1"
                                    Grid.Column="1" 
                                    VerticalAlignment="Center"
                                    Margin="25,0,25,0"
                                    Minimum="0"
                                    Maximum="255"
                                    Value="255" ValueChanged="Options_slider_winOpacity_ValueChanged">
                            </Slider>

                            <Label x:Name="Options_lbl_FontColor"
                                   Grid.Row="2"
                                   Grid.Column="0"
                                   Content="text color :"
                                   Style="{StaticResource Options_lbl}"/>
                            <xctk:ColorPicker x:Name="option_colorPicker_textColor" 
                                              Grid.Row="2" 
                                              Grid.Column="1"
                                              Margin="25,6,25,6"
                                              SelectedColor="#FF212121" SelectedColorChanged="option_colorPicker_textColor_SelectedColorChanged"/>

                            <Label x:Name="Options_lbl_Font"
                                   Grid.Row="3"
                                   Grid.Column="0"
                                   Content="font :"
                                   Style="{StaticResource Options_lbl}"/>

                            <ComboBox x:Name="cmbbox_Panels_FontSelector" 
                                      Grid.Column="1" Grid.Row="3"
                                      ItemsSource="{Binding Source={StaticResource familyCollection}}" 
                                      
                                      VerticalAlignment="Center"
                                      Margin="25,6,25,6" SelectionChanged="cmbbox_Panels_FontSelector_SelectionChanged"/>
                        </Grid>
                    </Grid>
                    <Grid x:Name="Header" Opacity="100">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="Header_btn_Option"
                                Style="{StaticResource Header_Button}"
                                Content="Options"
                                FontFamily="Poppins"
                                FontSize="14"
                                Margin="10,6,35,6"
                                Click="Header_btn_Options_Click"
                                Grid.Column="0"/>
                        <Label x:Name="lbl_Title"
                           Content="Note"
                           FontFamily="Poppins"
                           FontSize="28"
                           Foreground="#FF252525" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontWeight="Bold" Grid.ColumnSpan="3" Margin="114,-6,114,0" />
                        <Grid Grid.Column="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Button x:Name="Header_btn_Save"
                                    Style="{StaticResource Header_Button}" Grid.Column="1" Click="Header_btn_Save_Click">
                                <fa:ImageAwesome Icon="File" Style="{StaticResource Header_Button_Icon}"></fa:ImageAwesome>
                            </Button>
                            <Button x:Name="Header_btn_Quit"
                                    Style="{StaticResource Header_Button}" Grid.Column="2" Click="Header_btn_Quit_Click">
                                <fa:ImageAwesome Icon="Close" Style="{StaticResource Header_Button_Icon}"></fa:ImageAwesome>
                            </Button>
                        </Grid>
                    </Grid>
                </Grid>
            </Border>
            <Grid x:Name="main_grid" Grid.Row="1">
                <TextBox x:Name="tbox_mainText"
                         Margin="15"
                         TextWrapping="Wrap"
                         Text="type text"
                         Background="{x:Null}"
                         BorderBrush="#00000000"
                         SelectionBrush="#FF6BB8FF"
                         SelectionTextBrush="{x:Null}"
                         FontSize="24"
                         BorderThickness="0,0,0,0"
                         IsTabStop="False"
                         AcceptsTab="True"
                         AcceptsReturn="True" 
                         FontFamily="Cascadia Code" 
                         Foreground="#FF212121"/>
            </Grid>
        </Grid>
    </Border>

</Window>
